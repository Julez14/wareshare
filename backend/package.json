{
  "name": "wareshare-api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "tail": "wrangler tail",
    "db:migrate": "wrangler d1 execute wareshare-db --file=./src/db/schema.sql",
    "db:migrate:local": "wrangler d1 execute wareshare-db --local --file=./src/db/schema.sql",
    "db:seed": "wrangler d1 execute wareshare-db --local --file=./src/db/seed.sql",
    "db:seed:remote": "wrangler d1 execute wareshare-db --remote --file=./src/db/seed.sql",
    "db:reset": "wrangler d1 execute wareshare-db --local --file=./src/db/schema.sql && wrangler d1 execute wareshare-db --local --file=./src/db/seed.sql",
    "cf-typegen": "wrangler types"
  },
  "dependencies": {
    "hono": "^4.7.4",
    "ulid": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250310.0",
    "typescript": "^5.8.2",
    "wrangler": "^4.4.0"
  }
}
